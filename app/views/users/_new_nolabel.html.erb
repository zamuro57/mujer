<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explain">
			<h2> <%= pluralize(@user.errors.count, "error") %> </h2>
		</div>
	<% end %>
	
	<div class="field">
		<%= f.text_field :username,size: 20,:placeholder => 'Username',:class => 'span4' %>
	</div>
	<div class="field">
		<%= f.text_field :name,size: 40, :placeholder => 'Full Name',:class => 'span4' %>
	</div>
	<div class="field">
		<%= f.email_field :email,size: 40,:placeholder => 'Your Email',:class => 'span4' %>
	</div>
	<div class="field">
    	<%= f.password_field :password, size:40,:placeholder => 'Password',:class => 'span4' %>
    	<% unless @user.errors.messages[:password_digest] === nil  %>
			<span class="validation-error"> 
				<%= @user.errors.messages[:password_digest].each { |msg| msg }.join(", ") %>
			</span>
		<% end %>
  	</div>
	<div class="field">
		<%= f.password_field :password_confirmation, size:40,:placeholder => 'Confirm Password',:class => 'span4' %>
	</div>
	<div class="actions">
		<%= f.submit :class=> 'btn'%>
	</div>
<% end %>