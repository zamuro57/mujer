<!DOCTYPE html>
<html>
<head>
  <title>Wuoman!</title>
  <%= stylesheet_link_tag    "application" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="brand" href="<%= root_url %>">Wuoman!</a>
	      <div class="nav-collapse">
            <ul class="nav">
            	<li class="divider-vertical"></li>
              <li class="">
                <a href="<%= new_post_url %>" title="Create a new post"><i class="icon-edit icon-white"></i>&nbsp;</a>
              </li>
            </ul>
            <form class="navbar-search pull-left" action="">
	        	<input type="text" class="search-query span2" placeholder="Search">
	        </form>
	        <ul class="nav pull-right">
	            <% if session[:user_id] %>
	            <li class="divider-vertical"></li>
	            	<li class="dropdown">
		              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= @current_user.username %> <b class="caret"></b></a>
		              <ul class="dropdown-menu">
		                <li><a href="#">Profile</a></li>
		                <li><a href="#">Settings</a></li>
		                <li class="divider"></li>
		                <li><%= link_to 'Log out',logout_url %></li>
		              </ul>
		            </li>
				<% end %>
	        </ul>
          </div>
	    </div>
	  </div>
	</div>
	<header>
		<div class="notification notification_alert">
			<%= render 'layouts/notification' %>
	    </div>
	</header>
	<div id="content" class="container">
		<div class="row">
			<div id="user_menu" class="span1">
				<ul class="user_menu unstyled">
					<li><%= link_to 'Posts', posts_url() %></li>
					<li></li>
					<li></li>
				</ul>
			</div>
			<div class="span11">
				<%= yield %>
			</div>
		</div>
	</div>
	<div id="footer" class="container">
	  
	</div>
	
	<%= javascript_include_tag "application" %>
	<% if alert || flash[:notice] || notice %>
		 <script>
		 	$(".notification").show();
		 	$("#content").css('margin-top','100px');
		 	$("#notificator_close").click(function (){
			   	$(".notification").fadeOut();
			   	$("#content").animate( { marginTop:"60px" }, 500);
			});
		 </script>
	<% end %>
</body>
</html>
